extends layout

block content
  div.home-center
    h1 #{title}
    form(action="/login", method="post")
      div.form-group
        input.form-control(type="text", name="username", placeholder="Your username")
      div.form-group
        input.form-control(type="password", name="password", placeholder="Password")
      button.btn.btn-dark(type="submit") Sign In
    p 
      a(href="/register") New to the site? Create an account.
    p
      a(href="/") Cancel
